= content_for :breadcrumbs do
  You are here:
  = link_to "Home", projects_path
  >
  = link_to @project.name, @project
  >
  %b= @list.title

.quiet#back-link= link_to "Back", @project

#page-title
  %span.page-title= @list.title
  -if @list.done?
    %span.alt (Completed)

= render @list

= content_for :sidebar do
  = render "lists/list_summary"
  = link_to "See all lists from the same project", @project
  .delete-link= link_to "Delete this list", [@project, @list], :method => :delete, :confirm => "Are you sure you want to delete this list?"
