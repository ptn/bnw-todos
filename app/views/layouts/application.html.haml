!!!
%html
  %head
    %title BnW Todos
    = stylesheet_link_tag :all
    = stylesheet_link_tag "blueprint/reset"
    = stylesheet_link_tag "blueprint/screen"
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.effects.core.js"
    = javascript_include_tag "jquery.effects.highlight.js"
    = csrf_meta_tag
  %body{ :style => "background-color: #e6e6e6;" }
    #header
      = render "shared/header"
    .container
      #content.span-24.last
        #main.span-17.colborder
          = yield
        #sidebar.span-6.last
          = yield :sidebar
    #footer
      = render "shared/footer"
